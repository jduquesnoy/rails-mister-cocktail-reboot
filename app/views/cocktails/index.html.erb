
<h1><em>Cocktails#index</em></h1>
<p>Find me in app/views/cocktails/index.html.erb</p>
<%= link_to "add a new cocktail", new_cocktail_path %>

<ul>
  <% @cocktails.each do |cocktail| %>
  <li>
    <%= link_to cocktail.name, cocktail_path(cocktail) %>
      <% if cocktail.photo.attached? %>
        <%= cl_image_tag cocktail.photo.key, height: 300, width: 400, crop: :fill %>
      <% else %> 
        <%= image_tag "https://images.unsplash.com/photo-1546171753-97d7676e4602?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=400&q=60", height: 300, width: 400 %>
      <% end %>
  </li>
    <% end %>
</ul>



