<div class="container">
   <div class="row justify-content-center">
    <div class="col-12 col-lg-8">
      <!-- This div is centered and takes 6 columns -->
    

      <h1><%= @cocktail.name %></h1>

        <% if @cocktail.photo.attached? %>     
            <div class="card-show" style="background-image:url(<%= cl_image_tag @cocktail.photo.key %>)" >
            <ul>
                <% @cocktail.doses.each do |dose| %>
                  <li><%= dose.description  %> - <%= dose.ingredient.name %> <%= dose.cocktail_id %> | <%= link_to "delete",dose_path(dose), method: :delete, data: { confirm: "Are you sure?" } %></li>  
                <% end %>
              </ul>
            </div>
          <% else %>
            <div class="card-show" style="background-image:url(https://images.unsplash.com/photo-1546171753-97d7676e4602?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=400&q=60)" >
            <ul>
                <% @cocktail.doses.each do |dose| %>
                  <li><%= dose.description  %> - <%= dose.ingredient.name %> <%= link_to '<i class="far fa-trash-alt"></i>'.html_safe ,dose_path(dose), method: :delete, data: { confirm: "Are you sure?" } %></li>  
                <% end %>
              </ul>
            </div>
        <% end %>
      <ul>
        <li><%= link_to 'Add_a_new_Dose', new_cocktail_dose_path(@cocktail) %></li>

        <li><%= link_to "Cocktail's renaming and photo's changing", edit_cocktail_path(@cocktail) %> </li>

        <li><<%= link_to "Delete #{@cocktail.name}",
                  cocktail_path(@cocktail),
                  method: :delete,
                  data: { confirm: "Are you sure?" } %> </li>
        <li><%= link_to 'Back_to_All_cocktails', cocktails_path %> </li>
      </ul>
    </div>
  </div>
</div>
